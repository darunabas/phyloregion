note=paste("R package version", meta$Version)
citHeader("To cite phyloregion in publications use:")


bibentry(bibtype = "Manual",
    title = {phyloregion: Biogeographic Regionalization and Spatial Conservation},
    author = {Barnabas H. Daru and Piyal Karunarathne and Klaus Schliep},
    year = {2020},
    note = note,
    url = {https://CRAN.R-project.org/package=phyloregion},
    textVersion = "Daru, B. H., Karunarathne P., & Schliep K. (2020), phyloregion: R package for biogeographic regionalization and spatial conservation. R package version 1.0.2, https://CRAN.R-project.org/package=phyloregion"
)


